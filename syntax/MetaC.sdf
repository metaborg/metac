%% Grammar for the MetaC language
%% By default, based on an example "entities" syntax
module MetaC

imports Common

exports

  context-free start-symbols
  
    Start

  context-free syntax
  
    "module" ID Definition*       -> Start {"Module"}
    "entity" ID "{" Property* "}" -> Definition {"Entity"}
    ID ":" Type                   -> Property {"Property"}
    ID                            -> Type {"Type"}
