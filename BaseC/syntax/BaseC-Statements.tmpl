
templates

// labels
Stm.Label = <<Identifier> : <Stm>>
Stm.Case = <case <Exp> : <Stm>>	//TODO: disallow assigns @see doc/TODO.txt
Stm.Default = <default : <Stm>>

// blocks
//TODO: add declarations
Stm.Block = <
{
	<Stm*>
}
>

// expresions
Stm.Exp = <<CommaExp> ;>
	
// selections
Stm.If = <
	if ( <CommaExp> )
		<Stm>
>

Stm.IfElse = <
	if ( <CommaExp> )
		<Stm>
	else
		<Stm>
>

Stm.Switch = <
	switch ( <CommaExp> )
		<Stm>
>

// iterations
Stm.While = <
	while ( <CommaExp> )
		<Stm>
>

Stm.DoWhile = <
	do
		<Stm>
	while ( <CommaExp> )
>

Stm.For = <
	for ( <CommaExpOpt> ; <CommaExpOpt> ; <CommaExpOpt> )
		<Stm>
>

// jumps
Stm.Goto = <goto <Identifier>>

Stm.Continue = <continue ;>

Stm.Break = <break ;>

Stm.Return = <return <CommaExpOpt> ;>

Stm.Exit = <exit <CommaExpOpt> ;>
